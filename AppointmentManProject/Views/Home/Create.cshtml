@model Appointment

<form method="post" asp-action="Create">
    <div class="border p-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black"> Add Appointment Details</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <lable asp-for="customerName">Customer Name</lable>
                <input asp-for="customerName" class="form-control" />
                <span asp-validation-for="customerName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="appointmentType">Appointment Type</label>
                <select asp-for="appointmentType" class="form-control">
                    <option value="check-up">Check-up</option>
                    <option value="follow-up">Follow-up</option>
                    <option value="other">Other</option>
                </select>
                <span asp-validation-for="appointmentType" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <lable asp-for="customerPhone">Customer Phone</lable>
                <input asp-for="customerPhone" class="form-control" />
                <span asp-validation-for="customerPhone" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="appointmentStart">Appointment Start</label>
                <input asp-for="appointmentStart" class="form-control" id="appointmentStart" />
                <span asp-validation-for="appointmentStart" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="appointmentEnd">Appointment End</label>
                <input asp-for="appointmentEnd" class="form-control" id="appointmentEnd" />
                <span asp-validation-for="appointmentEnd" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="w-12 btn-group" role="group">
            <input type="submit" class="btn btn-primary" value="Save details" />
            <a asp-action="Index" class="btn btnalert-primary mx-1">Back To List</a>
        </div>
    </div>
</form>