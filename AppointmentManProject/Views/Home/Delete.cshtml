@model Appointment

@section Scripts {
    <script> //Edits the phone attribute to look how it would when creating new customer
        window.onload = function () {
            var customerPhoneInput = document.getElementById('customerPhone'); 
            if (customerPhoneInput) {
                customerPhoneInput.value = customerPhoneInput.value.replace(/\D/g, '');
            }
        }
    </script>
}

<form method="post" asp-action="DeleteAppointment">
    <input asp-for="appointmentId" hidden />
    <div class="border p-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black">Delete Appointment Details ?</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="customerName">Customer Name</label>
                <input asp-for="customerName" readonly class="form-control" />

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="appointmentType">Appointment Type</label>
                <input asp-for="appointmentType" readonly class="form-control"/>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="customerPhone">Customer Phone</label>
                <input asp-for="customerPhone" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="appointmentStart">Appointment Start</label>
                <input asp-for="appointmentStart" readonly class="form-control" id="appointmentStart" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="appointmentEnd">Appointment End</label>
                <input asp-for="appointmentEnd" readonly class="form-control" id="appointmentEnd" />
            </div>
        </div>
        <br />
        <div class="w-12 btn-group" role="group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btnalert-primary mx-1">Back To List</a>
        </div>
    </div>
</form>